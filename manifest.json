{
    "manifest_version": 2,
    "name": "Blip Dark",
    "version": "0.1",
    "description": "Extension to facilitate viewing of blipchat at night",
    "icons": {
        "128": "img/icon.png"
    },
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Dark Blip",
        "default_popup": "index.html"
    },
    "permissions": [
        "https://*//*",
        "http://*//*",
        "tabs"
    ]

}